{
  "name": "functions",
  "version": "0.1.14",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start:function": "npm run shell",
    "start": "NODE_ENV=production node lib/server.js",
    "start:local": "NODE_ENV=production node -r dotenv/config lib/server.js",
    "start:debug": "NODE_ENV=production node --inspect-brk=9229 lib/server.js",
    "start:onlinux": "npm run build && NODE_ENV=production pm2 start lib/server.js -i 2 --name YAWORK_API",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@slack/client": "^5.0.1",
    "ajv": "^6.10.0",
    "axios": "^0.18.1",
    "body-parser": "^1.18.3",
    "debug": "^3.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.3",
    "firebase-admin": "~5.12.1",
    "firebase-functions": "^1.0.3",
    "luxon": "^1.3.1",
    "moment": "^2.22.2",
    "urijs": "^1.19.10",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/luxon": "^1.2.1",
    "@types/uuid": "^3.4.3",
    "shelljs": "^0.8.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.8.0",
    "typescript": "^3.4.5",
    "typescript-json-schema": "^0.36.0",
    "typescript-tslint-plugin": "^0.3.1"
  },
  "private": true
}
